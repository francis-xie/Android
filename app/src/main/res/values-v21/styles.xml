<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- 拓展主题 theme. -->
    <style name="FACETheme" parent="FACEBaseTheme">
        <!--设置默认窗口的动画样式-->
        <item name="android:windowAnimationStyle">@style/WindowAnimStyle</item>
        <item name="android:navigationBarColor">@color/face_config_color_50_pure_black</item>

        <!--自定义标题栏样式方法1-->
        <!--<item name="face_actionbar_color">@color/app_color_theme_1</item>-->
        <!--<item name="face_actionbar_text_color">@color/face_config_color_primary_text</item>-->
        <!--<item name="face_actionbar_immersive">true</item>-->

        <!--自定义标题栏样式方法2-->
        <!--<item name="TitleBarStyle">@style/TitleBar.Custom</item>-->
    </style>

    <!--<style name="TitleBar.Custom">-->
        <!--<item name="tb_titleTextColor">@color/face_config_color_primary_text</item>-->
        <!--<item name="tb_immersive">true</item>-->
    <!--</style>-->

    <!--窗体背景，这个背景能在第一时间显示, 避免启动时白屏，黑屏问题-->
    <style name="FACETheme.Launch.Demo">
        <item name="android:windowBackground">@drawable/face_config_bg_splash</item>
        <item name="face_config_splash_app_logo">@drawable/ic_splash_app_logo_face</item>
        <item name="face_config_splash_company_logo">@drawable/ic_splash_company_logo_basic</item>
        <item name="android:navigationBarColor">@color/face_config_color_transparent</item>
    </style>

    <!--SettingTheme-->
    <style name="SettingTheme" parent="FACETheme.Phone">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--系统弹窗按钮样式-->
        <item name="buttonStyle">@style/Button.AlertDialog</item>

        <!--有Title-->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>

        <item name="android:navigationBarColor">@color/face_config_color_50_pure_black</item>
    </style>


    <!--SettingTheme-->
    <style name="SettingTheme.Custom">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/custom_color_main_theme</item>
        <item name="colorPrimaryDark">@color/custom_color_main_theme</item>
        <item name="colorAccent">@color/custom_color_main_theme</item>
    </style>


</resources>