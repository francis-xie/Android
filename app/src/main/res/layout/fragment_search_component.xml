<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/face_actionbar_height"
        android:orientation="vertical"
        android:paddingStart="?attr/face_config_content_spacing_horizontal"
        android:paddingEnd="?attr/face_config_content_spacing_horizontal">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextStyle.Content"
                android:layout_margin="?attr/face_config_content_spacing_horizontal"
                android:text="历史搜索" />

            <com.basic.face.widget.alpha.FACEAlphaImageView
                android:id="@+id/iv_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="?attr/face_config_content_spacing_vertical"
                android:padding="@dimen/margin8"
                android:tint="@color/face_config_color_gray_5"
                app:srcCompat="@drawable/icon_delete" />

        </FrameLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

    </LinearLayout>

    <!--  搜索框  -->
    <com.basic.face.widget.searchview.MaterialSearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入组件的名称"/>


</FrameLayout>