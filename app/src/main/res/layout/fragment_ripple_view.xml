<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.basic.face.widget.button.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/face_config_content_spacing_horizontal"
        app:rv_type="simpleRipple">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="?attr/face_config_content_spacing_horizontal"
            android:layout_marginEnd="?attr/face_config_content_spacing_horizontal"
            android:background="@color/app_color_theme_1"
            android:gravity="center"
            android:text="单波纹"
            android:textColor="@color/face_config_color_white"
            android:textSize="20sp" />

    </com.basic.face.widget.button.RippleView>

    <com.basic.face.widget.button.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/face_config_content_spacing_horizontal"
        app:rv_type="doubleRipple">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="?attr/face_config_content_spacing_horizontal"
            android:layout_marginEnd="?attr/face_config_content_spacing_horizontal"
            android:background="@color/app_color_theme_2"
            android:gravity="center"
            android:text="双波纹"
            android:textColor="@color/face_config_color_white"
            android:textSize="20sp" />

    </com.basic.face.widget.button.RippleView>

    <com.basic.face.widget.button.RippleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/face_config_content_spacing_horizontal"
        app:rv_type="rectangle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="?attr/face_config_content_spacing_horizontal"
            android:layout_marginEnd="?attr/face_config_content_spacing_horizontal"
            android:background="@color/app_color_theme_3"
            android:gravity="center"
            android:text="方型波纹"
            android:textColor="@color/face_config_color_white"
            android:textSize="20sp" />

    </com.basic.face.widget.button.RippleView>


</LinearLayout>