<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.basic.refresh.layout.RefreshLayouts style="@style/PullDownStyle">

        <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyle.Title"
                    android:text="欢迎长按或扫码关注：" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_qq_group"
                    android:layout_width="200dp"
                    android:layout_height="274dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="?attr/face_config_content_spacing_horizontal"
                    android:src="@drawable/img_face_qq" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_win_xin"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="?attr/face_config_content_spacing_horizontal"
                    android:src="@drawable/img_winxin_subscription_number" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </com.basic.refresh.layout.RefreshLayouts>

</LinearLayout>