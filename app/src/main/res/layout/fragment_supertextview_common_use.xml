<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.basic.refresh.layout.SmartRefreshLayout style="@style/PullDownStyle">

        <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <com.basic.face.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    android:layout_height="60dp"
                    app:sLeftIconRes="@drawable/icon_head_default"
                    app:sLeftTextString="帐号管理"
                    app:sLeftViewMarginLeft="10dp" />

                <com.basic.face.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    android:layout_height="60dp"
                    app:sLeftTextString="头像">

                    <com.basic.face.widget.imageview.RadiusImageView
                        android:id="@+id/riv_head_pic"
                        style="@style/RadiusImageView.Circle"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/sRightImgId"
                        app:srcCompat="@drawable/img_beautiful_scenery" />

                </com.basic.face.widget.textview.supertextview.SuperTextView>

                <com.basic.face.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="通知设置" />

                <com.basic.face.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    app:sLeftTextString="账号与安全"
                    app:sRightTextString="已保护"
                    app:sRightTvDrawableLeft="@drawable/icon_crown" />

                <com.basic.face.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    app:sDividerLineType="none"
                    app:sLeftTextString="设置中心" />


                <com.basic.face.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    android:layout_marginTop="50dp"
                    app:sDividerLineType="none"
                    app:sLeftTextString="意见反馈" />

                <com.basic.face.widget.textview.supertextview.SuperTextView
                    style="@style/InfoItem.Account"
                    android:layout_marginTop="20dp"
                    app:sDividerLineType="none"
                    app:sLeftTextString="关于微博" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.basic.refresh.layout.SmartRefreshLayout>

</LinearLayout>