<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.basic.face.widget.alpha.FACEAlphaButton
            android:id="@+id/btn_sex_picker"
            style="@style/Button.Primary.wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="性别选择器"/>

        <com.basic.face.widget.alpha.FACEAlphaButton
            android:id="@+id/btn_class_picker"
            style="@style/Button.Primary.wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="年级选择器"/>

        <com.basic.face.widget.alpha.FACEAlphaButton
            android:id="@+id/btn_constellation_picker"
            style="@style/Button.Primary.wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="星座选择器"/>

        <com.basic.face.widget.alpha.FACEAlphaButton
            android:id="@+id/btn_nation_picker"
            style="@style/Button.Primary.wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="民族选择器"/>



    </LinearLayout>

</LinearLayout>