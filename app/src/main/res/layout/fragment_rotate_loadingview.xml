<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <com.basic.face.widget.alpha.FACEAlphaButton
            android:id="@+id/btn_switch"
            style="@style/Button.Primary"
            android:text="开始" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.basic.face.widget.progress.loading.RotateLoadingView
            android:id="@+id/auto_arc_loading"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp" />

        <com.basic.face.widget.progress.loading.RotateLoadingView
            android:id="@+id/arc_loading"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            app:lv_auto="false"
            app:lv_has_icon="false" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.basic.face.widget.progress.loading.RotateLoadingView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            app:lv_arc_single="true"
            app:lv_icon="@mipmap/ic_launcher"
            app:lv_speed="8" />

        <com.basic.face.widget.progress.loading.RotateLoadingView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            app:lv_icon="@mipmap/ic_launcher" />


    </LinearLayout>


</LinearLayout>