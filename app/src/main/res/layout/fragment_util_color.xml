<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentWrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <!-- 设置颜色的 alpha 值 -->
            <TextView
                style="@style/TextStyle.Content"
                android:text="@string/color_utils_alpha_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/face_config_content_spacing_vertical"
                android:layout_marginBottom="?attr/face_config_content_spacing_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="@dimen/color_utils_square_length"
                        android:layout_height="@dimen/color_utils_square_length"
                        android:background="@color/face_config_color_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/color_utils_square_desc_marginTop"
                        android:text="@string/color_utils_square_origin" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/color_utils_square_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_arrow_right" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/square_alpha"
                        android:layout_width="@dimen/color_utils_square_length"
                        android:layout_height="@dimen/color_utils_square_length" />

                    <TextView
                        android:id="@+id/square_desc_alpha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/color_utils_square_desc_marginTop" />

                </LinearLayout>
            </LinearLayout>

            <!-- 根据比例，在两个 color 值之间计算出一个 color 值 -->
            <TextView
                style="@style/TextStyle.Content"
                android:singleLine="false"
                android:maxLines="2"
                android:gravity="start"
                android:text="@string/color_utils_ratio_title" />

            <LinearLayout
                android:id="@+id/ratioSeekBarWrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/face_config_content_spacing_vertical"
                android:layout_marginBottom="?attr/face_config_content_spacing_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/color_utils_square_length"
                    android:layout_height="@dimen/color_utils_square_length"
                    android:background="@color/face_config_color_pure_blue" />

                <SeekBar
                    android:id="@+id/ratioSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

                <View
                    android:layout_width="@dimen/color_utils_square_length"
                    android:layout_height="@dimen/color_utils_square_length"
                    android:background="@color/face_config_color_pure_yellow" />

            </LinearLayout>

            <!-- 将 color 颜色值转换为字符串 -->
            <TextView
                style="@style/TextStyle.Content"
                android:text="@string/color_utils_transform_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="?attr/face_config_content_spacing_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transformTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorAccent" />
            </LinearLayout>

            <!-- 获取随机颜色 -->
            <TextView
                style="@style/TextStyle.Content"
                android:text="@string/color_utils_random_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/face_config_content_spacing_horizontal"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/v_random"
                    android:layout_width="@dimen/color_utils_square_length"
                    android:layout_height="@dimen/color_utils_square_length" />

                <TextView
                    android:id="@+id/tv_is_dark"
                    style="@style/TextStyle.Explain"
                    android:layout_marginStart="20dp" />


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>