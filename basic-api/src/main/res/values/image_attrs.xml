<resources>

    <declare-styleable name="tailor_TailorView">

        <!--Crop image view-->
        <attr name="tailor_aspect_ratio_x" format="float"/>
        <attr name="tailor_aspect_ratio_y" format="float"/>

        <!--Overlay view-->
        <attr name="tailor_show_oval_crop_frame" format="boolean"/>
        <attr name="tailor_circle_dimmed_layer" format="boolean"/>
        <attr name="tailor_dimmed_color" format="color"/>

        <attr name="tailor_grid_stroke_size" format="dimension"/>
        <attr name="tailor_grid_color" format="color"/>
        <attr name="tailor_grid_row_count" format="integer"/>
        <attr name="tailor_grid_column_count" format="integer"/>
        <attr name="tailor_show_grid" format="boolean"/>

        <attr name="tailor_frame_stroke_size" format="dimension"/>
        <attr name="tailor_frame_color" format="color"/>
        <attr name="tailor_show_frame" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="tailor_AspectRatioTextView">

        <attr name="tailor_artv_ratio_title" format="string"/>

        <attr name="tailor_artv_ratio_x" format="float"/>
        <attr name="tailor_artv_ratio_y" format="float"/>

    </declare-styleable>

</resources>