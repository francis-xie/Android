<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="PageTitleBarStyle">@style/PageTitleBar</item>
    </style>

    <style name="PageTitleBar">
        <item name="tb_barHeight">?attr/page_actionbar_height</item>
        <item name="tb_immersive">false</item>
        <item name="tb_actionPadding">?attr/page_actionbar_action_padding</item>
        <item name="tb_sideTextPadding">?attr/page_actionbar_side_text_padding</item>
        <item name="tb_sideTextColor">@color/page_default_actionbar_text_color</item>
        <item name="tb_titleTextColor">@color/page_default_actionbar_text_color</item>
        <item name="tb_subTitleTextColor">@color/page_default_actionbar_text_color</item>
        <item name="tb_actionTextColor">@color/page_default_actionbar_text_color</item>
        <item name="tb_centerGravity">center</item>
        <item name="tb_sideTextSize">?attr/page_actionbar_action_text_size</item>
        <item name="tb_titleTextSize">?attr/page_actionbar_title_text_size</item>
        <item name="tb_subTitleTextSize">?attr/page_actionbar_sub_text_size</item>
        <item name="tb_actionTextSize">?attr/page_actionbar_action_text_size</item>
        <item name="tb_dividerColor">@color/page_config_color_transparent</item>
        <item name="tb_dividerHeight">1dp</item>
        <item name="tb_useThemeColor">true</item>
    </style>

</resources>